{
	"editor.formatOnSave": true,
    "javascript.validate.enable": false,
    "css.validate": false,
    "less.validate": false,
    "scss.validate": false,
    "stylelint.validate": [ "css", "scss"],
    "[scss]": {
        "editor.formatOnSave": false,
        "editor.codeActionsOnSave": {
            "source.fixAll.stylelint": true
        },
    }
}
